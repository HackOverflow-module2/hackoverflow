<div>
    <div class="row background user-details-container">
        <div class="col col-md-2">
            <img src="{{user.photoPath}}" alt="">
            <div class="mt-2">
                 <a href="/users/{{user._id}}/edit" class="btn btn-success">Edit profile</a>
            </div>
        </div>
        <div class="col col-md-4">
            <h3>{{user.name}} {{user.surname}}</h3>
            <h5>{{user.nickname}}</h5>
            <p>{{user.description}}</p>
        </div>
    </div>



    <div class="wrap">
      {{#each user.tags}}
        <span class="badge badge-success">{{this}}</span>
      {{/each}}    
    </div>

<div class="row">
    <div class="col">
        <h3>Your Questions</h3>
        {{> questions/list}}
    </div>
    <div class="col">
        <h3>Your Resources</h3>
        {{> resources/list}}
    </div>
</div>

</div> 