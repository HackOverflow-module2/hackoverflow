<div class="row mt-5">
  <form action="/users/signup" method="post" class="col-4 mx-auto">
      <h2>
        Sign up
    </h2>
    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fas fa-user"></i> </span>
      </div>
      <input type="text" class="form-control {{#if errors.name }}is-invalid{{/if}}" name="name" placeholder="Name" value="{{ user.name }}"/>
      {{#if errors.name }}
        <div class="invalid-feedback">
          {{ errors.name }}
        </div>
      {{/if}}
    </div>

    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fas fa-user"></i> </span>
      </div>
      <input type="text" class="form-control {{#if errors.surname }}is-invalid{{/if}}" name="surname" placeholder="Last name" value="{{ user.surname }}"/>
      {{#if errors.surname }}
        <div class="invalid-feedback">
          {{ errors.surname }}
        </div>
      {{/if}}
    </div>

    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fas fa-user"></i> </span>
      </div>
      <input type="text" class="form-control {{#if errors.nickname }}is-invalid{{/if}}" name="nickname" placeholder="nickname" value="{{ user.nickname }}"/>
      {{#if errors.nickname }}
        <div class="invalid-feedback">
          {{ errors.nickname }}
        </div>
      {{/if}}
    </div>

    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fas fa-envelope"></i> </span>
      </div>
      <input type="email" class="form-control {{#if errors.email }}is-invalid{{/if}}" name="email" placeholder="user@exaple.org" value="{{ user.email }}"/>
      {{#if errors.email }}
        <div class="invalid-feedback">
          {{ errors.email }}
        </div>
      {{/if}}
    </div>

    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
      </div>
      <input type="password" class="form-control {{#if errors.password }}is-invalid{{/if}}" name="password" placeholder="Password"/>
      {{#if errors.password }}
        <div class="invalid-feedback">
          {{ errors.password }}
        </div>
      {{/if}}
    </div>

    <div class="">
      <button class="btn btn-primary mb-2 btn-block" type="submit" >Sign in</button>
      <hr>
    </div>

  </form>
</div>