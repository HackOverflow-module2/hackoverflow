<div class="container my-5">
    <div class="row">
        {{#each tags}}
        <div class="col col-4">
            <div class="card mb-3" style="width: 18rem;">
            <img class="card-img-top" src="{{this.logo}}" alt="Logo">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text ellipses tag-description" id="ellipses">{{this.description}}</p>
                    <a href="/tags/{{this.id}}" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>