        <div class="py-5">
            <h1>
                {{tag.name}}
            </h1>
            <p class="box">{{tag.description}}</p>
        </div>

    </div>
</div>

<div class="container">

    <div class="wrap">
        <div class="row justify-content-center">
            <div class="col text-center">
                <h2>
                    Questions
                </h2>
                <a class="btn btn-success" href="/questions/create">
                    Ask a question
                </a>
            </div>
            <div class="col text-center">
                <h2>
                    Resources
                </h2>
                <a class="btn btn-success" href="/resources/create">
