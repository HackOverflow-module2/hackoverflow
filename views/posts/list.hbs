<div class="welcome-container background">
    <h1 class="text-center">
        Welcome to <br>Hackoverflow!
    </h1>
    <div class="wrap">
        <div class="row justify-content-center">
            <div class="col text-center">
                <h2>
                    Questions
                </h2>
                <a class="btn btn-success btn-welcome" href="/questions/create">
                    Ask a question
                </a>
            </div>
            <div class="col text-center">
                <h2>
                    Resources
                </h2>
                <a class="btn btn-success btn-welcome" href="/resources/create">
                    Share something usefulw
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row posts-container">
    <div class="col">
        <div class="text-right mb-2">
            
            <span class="btn-sm btn-default btn order-rating">rating &nbsp; <i class="fas fa-sort"></i></span>
            <span class="btn-sm btn-default btn order-date">date &nbsp;<i class="fas fa-sort"></i></span>

        </div>
        <div class="questions-wrap posts-wrap">
            {{> questions/list}}
        </div>
    </div>
    
    <div class="col">
        <div class="text-right mb-2">
            <span class="btn-sm btn-default btn order-rating-resource">rating &nbsp;  <i class="fas fa-sort"></i></span>
            <span class="btn-sm btn-default btn order-date-resource">date &nbsp;<i class="fas fa-sort"></i></span>
        </div>
        <div class="resources-wrap posts-wrap">
        {{> resources/list}}
        </div>
    </div>
</div>
<div class="d-flex justify-content-end">
    <div class="pagination">
        <a href="/?page={{prevPage}}"><i class="fas fa-chevron-left"></i></a>
        <a href="/?page={{nextPage}}"><i class="fas fa-chevron-right"></i></a>
        <input type="hidden" id="pagination" value="0" name="pagination">
    </div>
</div>

