<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col col-md-5">
        {{ question.title }}
        <form action="/questions/{{question.id}}/rating/update" method="post">
        <input type="text" id="like" name="like" value="{{question.rating}}">  
        <button type="submit">       
          <i class="fas fa-heart like">&nbsp;&nbsp;</i>
        </button> 
        </form>
      </div>
      <div class="col col-md-7">
        <a href="/questions/{{question.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
      </div>
    </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{ question.description }} </p>
    </blockquote>
    <p>- {{ question.user.name }} </p>
    {{#each question.tags}}
        <span class="badge badge-success">{{this}}</span>
    {{/each}}
  </div>

  {{> answer/create }}

  {{#each answers}}

    {{> answer/list this}}

  {{/each}}
</div>