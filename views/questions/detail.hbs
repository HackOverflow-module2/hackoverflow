<div class="card">
  <div class="card-header">
    {{ question.title }}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{ question.description }} </p>
    </blockquote>
    <p>- {{ question.user.name }} </p>
    {{#each question.tags}}
        <span class="badge badge-success">{{this}}</span>
    {{/each}}
  </div>

  {{> answer/create }}

  {{#each answers}}

    {{> answer/list this}}

  {{/each}}
</div>