{{#each questions}}
    
  <div class="card">
    <div class="card-header">
      <div class="row"></div>
      <a href="/questions/{{this.id}}">{{this.title}}</a>
        <form action="/{{this.id}}/rating/update" method="post">
          <input type="button" id="like" name="like" value="{{this.rating}}">  
          <button type="submit" class="btn btn-default btn-sm">       
            <i class="fas fa-heart like"></i>
          </button> 
        </form>
    </div>
    <div class="card-body">
      <h5 class="card-title">{{this.description}}</h5>
      <p class="card-text">{{this.user.name}}</p>
      <div class="wrap">
        {{#each this.tags}}
          <span class="badge badge-success">{{this}}</span>
        {{/each}}    
      </div>
      {{#date this.createdAt}}
      <div>{{this}}</div>
      {{/date}}
      <div>
        <a href="/questions/{{this.id}}" class="btn btn-primary btn-sm">Answer</a>
      </div>
    </div>
  </div>

{{/each}}
