{{#each resources}}
    
<div class="card post-card resources-card mb-3">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <a href="/resources/{{this.id}}">{{this.title}}</a>
      </div>
      <div class="col text-right">
      <form action="/{{this.id}}/resource-rating/update" method="post" class="d-inline-block text-right">
        <input type="button" id="like" name="like" value="{{this.rating}}" class="rating-num">  
        <button type="submit" class="btn btn-like">       
          <i class="fas fa-heart like"></i>
        </button> 
      </form>
      </div>
    </div>
  </div>
  <div class="card-body">
    <h5 class="card-title">
    {{#markdown this.description}}
      {{this}}
    {{/markdown}}
    </h5>
    <p class="card-text">{{this.user.name}}</p>
    <div class="mb-3">
      {{#each this.tags}}
        <span class="badge badge-success">{{this}}</span>
      {{/each}}    
    </div>
    {{!-- hidden div to get date order --}}
    <div class="date d-none">
      {{#dateTime this.createdAt}}
        {{this}}
      {{/dateTime}}
    </div>
    {{#date this.createdAt}}
      <div>{{this}}</div>
    {{/date}}

  </div>
</div>

{{/each}}
