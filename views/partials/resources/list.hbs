{{#each resources}}
    
<div class="card post-card">
  <div class="card-header">
    <a href="/resources/{{this.id}}">{{this.title}}</a>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{this.description}}</h5>
    <p class="card-text">{{this.user.name}}</p>
    <div class="wrap">
      {{#each this.tags}}
        <span class="badge badge-success">{{this}}</span>
      {{/each}}    
    </div>
    {{#date this.createdAt}}
      <div>{{this}}</div>
    {{/date}}

  </div>
</div>

{{/each}}
